<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.binarybeast.view.Registration"
    android:id="@+id/activity_registration">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name: "
        android:textSize="14sp"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/r_userName"
        android:layout_alignBottom="@+id/r_userName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r_userName"
        android:hint="UserName"
        android:layout_marginTop="79dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:textSize="14sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password: "
        android:textSize="14sp"
        android:id="@+id/textView4"
        android:layout_below="@+id/r_userName"
        android:layout_toLeftOf="@+id/r_passWord"
        android:layout_toStartOf="@+id/r_passWord"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r_passWord"
        android:password="true"
        android:hint="Password"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignLeft="@+id/r_userName"
        android:layout_alignStart="@+id/r_userName"
        android:textSize="14sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r_verifyPass"
        android:password="true"
        android:hint="Password"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify Password: "
        android:textSize="14sp"
        android:id="@+id/textView5"
        android:layout_below="@+id/r_passWord"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/r_verifyPass"
        android:layout_toStartOf="@+id/r_verifyPass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/r_submit"
        android:onClick="submit"
        android:layout_above="@+id/r_cancel"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/r_cancel"
        android:onClick="rCancel"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/r_submit"
        android:layout_alignStart="@+id/r_submit"
        android:layout_marginBottom="106dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/log_name"
        android:hint="Name"
        android:textSize="14sp"
        android:layout_below="@+id/r_verifyPass"
        android:layout_alignLeft="@+id/r_verifyPass"
        android:layout_alignStart="@+id/r_verifyPass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="14sp"
        android:id="@+id/textView7"
        android:layout_below="@+id/r_verifyPass"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignBottom="@+id/log_name"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="14sp"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/log_email"
        android:hint="Email"
        android:textSize="14sp"
        android:layout_below="@+id/log_name"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        tools:ignore="TextFields" />


</RelativeLayout>
